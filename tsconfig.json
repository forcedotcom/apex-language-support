{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@salesforce/apex-lsp-logging": ["packages/apex-lsp-logging/src"],
      "@salesforce/apex-lsp-logging/*": ["packages/apex-lsp-logging/src/*"],

      "@salesforce/apex-lsp-parser-ast": ["packages/apex-parser-ast/src"],
      "@salesforce/apex-lsp-parser-ast/*": ["packages/apex-parser-ast/src/*"],

      "@salesforce/apex-lsp-compliant-services": [
        "packages/lsp-compliant-services/src"
      ],
      "@salesforce/apex-lsp-compliant-services/*": [
        "packages/lsp-compliant-services/src/*"
      ],

      "@salesforce/apex-lsp-testbed": ["packages/apex-lsp-testbed/src"],
      "@salesforce/apex-lsp-testbed/*": ["packages/apex-lsp-testbed/src/*"],

      "@salesforce/apex-lsp-custom-services": ["packages/custom-services/src"],
      "@salesforce/apex-lsp-custom-services/*": [
        "packages/custom-services/src/*"
      ],

      "@salesforce/apex-ls-node": ["packages/apex-ls-node/src"],
      "@salesforce/apex-ls-node/*": ["packages/apex-ls-node/src/*"],

      "@salesforce/apex-ls-browser": ["packages/apex-ls-browser/src"],
      "@salesforce/apex-ls-browser/*": ["packages/apex-ls-browser/src/*"],

      "@salesforce/apex-lsp-browser-client": [
        "packages/apex-lsp-browser-client/src"
      ],
      "@salesforce/apex-lsp-browser-client/*": [
        "packages/apex-lsp-browser-client/src/*"
      ],

      "@salesforce/apex-lsp-vscode-client": [
        "packages/apex-lsp-vscode-client/src"
      ],
      "@salesforce/apex-lsp-vscode-client/*": [
        "packages/apex-lsp-vscode-client/src/*"
      ],

      "@salesforce/apex-lsp-vscode-extension": [
        "packages/apex-lsp-vscode-extension/src"
      ],
      "@salesforce/apex-lsp-vscode-extension/*": [
        "packages/apex-lsp-vscode-extension/src/*"
      ]
    }
  },
  "references": [
    { "path": "./packages/apex-lsp-logging" },
    { "path": "./packages/apex-parser-ast" },
    { "path": "./packages/lsp-compliant-services" },
    { "path": "./packages/custom-services" },
    { "path": "./packages/apex-ls-node" },
    { "path": "./packages/apex-ls-browser" },
    { "path": "./packages/apex-lsp-browser-client" },
    { "path": "./packages/apex-lsp-testbed" },
    { "path": "./packages/apex-lsp-vscode-client" },
    { "path": "./packages/apex-lsp-vscode-extension" }
  ]
}
