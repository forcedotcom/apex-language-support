{
  "typescript.format.enable": false,
  "javascript.format.enable": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": ["typescript", "typescriptreact"],
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.run": "onType",
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "files.autoSave": "afterDelay",
  "jest.jestCommandLine": "node_modules/.bin/jest",
  "jest.debugMode": true,
  "jest.autoRun": {
    "watch": false,
    "onSave": false
  },
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "debug.javascript.terminalOptions": {
    "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
  },
  "eslint.nodeEnv": "",
  "typescript.tsserver.enableTracing": false,
  "bevel.java": "/Users/peter.hale/.cursor/extensions/bevel-software.bevel-1.3.0-universal/backend/amazon-corretto-17.jdk/Contents/Home/bin/java",
  "java.project.sourcePaths": ["packages/apex-parser-ast/src/symbols"],
  "apex.debug": "inspect-brk",
  "apex.debugPort": 6009,
  // Coverage Gutters configuration
  // Uses recursive search (default "**") to find coverage files in:
  // - Root: coverage/lcov.info (merged from all packages via test:coverage:report)
  // - Packages: packages/*/coverage/lcov.info (individual package coverage)
  // Extension automatically uses the nearest coverage file to the file being viewed
  "coverage-gutters.showLineCoverage": true,
  "coverage-gutters.showRulerCoverage": true,
  "coverage-gutters.showGutterCoverage": true,
  // Default "**" searches recursively - finds both root and package-level coverage
  "coverage-gutters.coverageBaseDir": "**",
  "coverage-gutters.coverageFileNames": [
    "lcov.info",
    "coverage-final.json"
  ],
  "coverage-gutters.lcovname": "lcov.info",
  "coverage-gutters.watch": true
}
