{
  "name": "@salesforce/apex-lsp-custom-services",
  "version": "1.0.0",
  "description": "Custom services for Apex Language Server",
  "main": "out/index.js",
  "module": "out/index.js",
  "types": "out/index.d.ts",
  "exports": {
    "import": "./out/index.js",
    "require": "./out/index.js"
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/custom-services"
  },
  "scripts": {
    "compile": "wireit",
    "bundle": "wireit",
    "test": "wireit",
    "test:coverage": "wireit",
    "clean": "rimraf out dist .wireit coverage tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "wireit"
  },
  "wireit": {
    "compile": {
      "command": "tsc --build",
      "clean": "if-file-deleted",
      "dependencies": [
        "../apex-parser-ast:precompile"
      ],
      "output": [
        "out/**"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig*.json",
        "../../tsconfig.base.json"
      ]
    },
    "bundle": {
      "command": "tsx esbuild.config.ts",
      "dependencies": [
        "compile"
      ],
      "output": [
        "dist/**"
      ],
      "files": [
        "out/**",
        "esbuild.config.ts"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests --json --outputFile=.wireit/test-results.json",
      "dependencies": [
        "compile"
      ],
      "output": [
        ".wireit/test-results.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage --passWithNoTests",
      "dependencies": [
        "compile"
      ],
      "output": [
        "coverage/**"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache src",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "eslint.config.mjs"
      ],
      "output": []
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@salesforce/esbuild-presets": "^0.1.0"
  }
}
