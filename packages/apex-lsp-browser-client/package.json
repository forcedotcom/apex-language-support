{
  "name": "@salesforce/apex-lsp-browser-client",
  "version": "1.0.0",
  "description": "Browser client for Apex Language Server",
  "main": "bundle/index.js",
  "module": "bundle/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./bundle/index.mjs",
    "require": "./bundle/index.js"
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-browser-client"
  },
  "scripts": {
    "compile": "tsc --build",
    "bundle": "npm run compile && tsup",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageDirectory=./coverage",
    "clean": "rimraf dist bundle *.tsbuildinfo .turbo coverage",
    "clean:all": "npm run clean && rimraf node_modules"
  },
  "dependencies": {
    "@salesforce/apex-lsp-parser-ast": "1.0.0",
    "@salesforce/apex-lsp-compliant-services": "1.0.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5"
  },
  "devDependencies": {},
  "keywords": [
    "apex",
    "salesforce",
    "language-server",
    "lsp",
    "client",
    "browser"
  ],
  "author": "Salesforce",
  "publishConfig": {
    "access": "public"
  }
}
