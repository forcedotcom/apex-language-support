{
  "name": "@salesforce/apex-lsp-shared",
  "version": "1.0.0",
  "description": "Apex LSP shared utilities",
  "main": "out/index.js",
  "module": "out/index.js",
  "types": "out/index.d.ts",
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "import": "./out/index.js",
      "require": "./out/index.js"
    },
    "./observability/node": {
      "types": "./out/observability/spansNode.d.ts",
      "import": "./out/observability/spansNode.js",
      "require": "./out/observability/spansNode.js"
    },
    "./observability/spansNode": {
      "types": "./out/observability/spansNode.d.ts",
      "import": "./out/observability/spansNode.js",
      "require": "./out/observability/spansNode.js"
    },
    "./observability/web": {
      "types": "./out/observability/spansWeb.d.ts",
      "import": "./out/observability/spansWeb.js",
      "require": "./out/observability/spansWeb.js"
    },
    "./observability/spansWeb": {
      "types": "./out/observability/spansWeb.d.ts",
      "import": "./out/observability/spansWeb.js",
      "require": "./out/observability/spansWeb.js"
    },
    "./observability/spans": {
      "types": "./out/observability/spans.d.ts",
      "import": "./out/observability/spans.js",
      "require": "./out/observability/spans.js"
    }
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-shared"
  },
  "scripts": {
    "compile": "wireit",
    "bundle": "wireit",
    "dev": "tsx esbuild.config.ts --watch",
    "test": "wireit",
    "test:coverage": "wireit",
    "clean": "rimraf out dist .wireit coverage tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "wireit"
  },
  "wireit": {
    "compile": {
      "command": "tsc --build",
      "clean": "if-file-deleted",
      "output": [
        "out/**"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig*.json",
        "../../tsconfig.base.json"
      ]
    },
    "bundle": {
      "command": "tsx esbuild.config.ts",
      "dependencies": [
        "compile"
      ],
      "output": [
        "dist/**"
      ],
      "files": [
        "src/**/*.ts",
        "esbuild.config.ts"
      ]
    },
    "test": {
      "command": "jest --json --outputFile=.wireit/test-results.json",
      "dependencies": [
        "compile"
      ],
      "output": [
        ".wireit/test-results.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage",
      "dependencies": [
        "compile"
      ],
      "output": [
        "coverage/**"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache src test",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "eslint.config.mjs"
      ],
      "output": []
    },
    "lint:fix": {
      "command": "eslint --fix --color --cache --cache-location .eslintcache src test",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "eslint.config.mjs"
      ],
      "output": []
    }
  },
  "dependencies": {
    "@effect/opentelemetry": "^0.39.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/core": "^1.19.0",
    "@opentelemetry/resources": "^1.19.0",
    "@opentelemetry/sdk-metrics": "^1.19.0",
    "@opentelemetry/sdk-trace-base": "^1.19.0",
    "@opentelemetry/sdk-trace-node": "^1.19.0",
    "@opentelemetry/sdk-trace-web": "^1.19.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.0",
    "@azure/monitor-opentelemetry-exporter": "^1.0.0-beta.21",
    "effect": "^3.18.4",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@salesforce/esbuild-presets": "^0.1.0"
  }
}
