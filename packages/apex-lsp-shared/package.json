{
  "name": "@salesforce/apex-lsp-shared",
  "version": "1.0.0",
  "description": "Apex LSP shared utilities",
  "main": "out/index.js",
  "module": "out/index.js",
  "types": "out/index.d.ts",
  "exports": {
    "import": "./out/index.js",
    "require": "./out/index.js"
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-shared"
  },
  "scripts": {
    "compile": "wireit",
    "bundle": "wireit",
    "dev": "tsx esbuild.config.ts --watch",
    "test": "wireit",
    "test:coverage": "wireit",
    "clean": "rimraf out dist .wireit coverage tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "wireit"
  },
  "wireit": {
    "compile": {
      "command": "tsc --build",
      "output": [
        "out/**"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig*.json",
        "../../tsconfig.base.json"
      ]
    },
    "bundle": {
      "command": "tsx esbuild.config.ts",
      "dependencies": [
        "compile"
      ],
      "output": [
        "dist/**"
      ],
      "files": [
        "src/**/*.ts",
        "esbuild.config.ts"
      ]
    },
    "test": {
      "command": "jest --json --outputFile=.wireit/test-results.json",
      "dependencies": [
        "compile"
      ],
      "output": [
        ".wireit/test-results.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage",
      "dependencies": [
        "compile"
      ],
      "output": [
        "coverage/**"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache src test",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../eslint.config.mjs"
      ],
      "output": []
    }
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@salesforce/esbuild-presets": "workspace:*"
  }
}
