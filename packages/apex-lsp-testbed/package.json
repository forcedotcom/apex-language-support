{
  "name": "@salesforce/apex-lsp-testbed",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Testbed for Salesforce Apex Language Server",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-testbed"
  },
  "scripts": {
    "build": "wireit",
    "compile": "wireit",
    "dev": "wireit",
    "test": "wireit",
    "test:coverage": "wireit",
    "test:integration": "wireit",
    "clean": "rimraf dist .wireit",
    "clean:all": "npm run clean && rimraf node_modules",
    "clean:coverage": "rimraf coverage",
    "start:demo": "node --enable-source-maps ./dist/cli.js --server demo --interactive",
    "start:jorje": "node --enable-source-maps ./dist/cli.js --server jorje --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:demo:verbose": "node --enable-source-maps ./dist/cli.js --server demo --interactive --verbose",
    "start:jorje:verbose": "node --enable-source-maps ./dist/cli.js --server jorje --interactive --verbose --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:jorje:debug": "node --enable-source-maps --inspect ./dist/cli.js --server jorje --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:jorje:debug:verbose": "node --enable-source-maps --inspect ./dist/cli.js --server jorje --interactive --verbose --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:jorje:debug:suspend": "node --enable-source-maps --inspect ./dist/cli.js --server jorje --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git --suspend",
    "start:jorje:debug:verbose:suspend": "node --enable-source-maps --inspect ./dist/cli.js --server jorje --interactive --verbose --workspace https://github.com/trailheadapps/dreamhouse-lwc.git --suspend",
    "start:extension-server": "node --enable-source-maps ./dist/servers/nodeServer/extensionServer/extensionLsServerHarness.js",
    "start:extension-server:debug": "node --enable-source-maps --inspect ./dist/servers/nodeServer/extensionServer/extensionLsServerHarness.js"
  },
  "wireit": {
    "build": {
      "command": "tsc --build",
      "dependencies": [
        "../apex-parser-ast:build",
        "../lsp-compliant-services:build",
        "../apex-ls-browser:build"
      ],
      "files": [
        "src/**/*.ts",
        "src/resources/**/*",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "compile": {
      "command": "tsc --build && mkdir -p dist/resources && cp -r src/resources/* dist/resources/",
      "dependencies": [
        "../apex-parser-ast:compile",
        "../lsp-compliant-services:compile",
        "../apex-ls-browser:compile"
      ],
      "files": [
        "src/**/*.ts",
        "src/resources/**/*",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "dev": {
      "command": "tsc --build --watch",
      "service": true,
      "dependencies": [
        "../apex-parser-ast:dev",
        "../lsp-compliant-services:dev",
        "../apex-ls-browser:dev"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test": {
      "command": "jest",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../jest.config.cjs",
        "../../babel.config.cjs"
      ],
      "output": []
    },
    "test:integration": {
      "command": "jest test/integration",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../jest.config.cjs",
        "../../babel.config.cjs"
      ],
      "output": []
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../jest.config.cjs",
        "../../babel.config.cjs"
      ],
      "output": [
        "coverage/**"
      ]
    }
  },
  "dependencies": {
    "@salesforce/apex-lsp-parser-ast": "1.0.0",
    "@salesforce/apex-lsp-compliant-services": "1.0.0",
    "@salesforce/apex-ls-browser": "1.0.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-jsonrpc": "^8.2.0"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "benchmark": "^2.1.4",
    "@types/benchmark": "^2.1.5",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "babel-jest": "^29.7.0"
  }
}
