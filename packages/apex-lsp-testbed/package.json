{
  "name": "@salesforce/apex-lsp-testbed",
  "version": "1.0.0",
  "description": "Testbed for Apex Language Server",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-testbed"
  },
  "scripts": {
    "compile": "wireit",
    "bundle": "echo 'Bundle is not needed for testbed'",
    "sync:fixtures": "wireit",
    "test": "wireit",
    "test:integration": "wireit",
    "test:quality": "wireit",
    "test:coverage": "wireit",
    "test:perf": "wireit",
    "test:perf:quick": "QUICK=true npm run test:perf",
    "test:perf:eda": "wireit",
    "test:perf:lsp": "wireit",
    "clean": "rimraf out dist .wireit tsconfig.tsbuildinfo coverage test-artifacts",
    "clean:all": "npm run clean && rimraf node_modules coverage test-artifacts",
    "start:demo": "node --enable-source-maps ./out/cli.js --server demo --interactive",
    "start:jorje": "node --enable-source-maps ./out/cli.js --server jorje --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:demo:verbose": "node --enable-source-maps ./out/cli.js --server demo --interactive --verbose",
    "start:jorje:verbose": "node --enable-source-maps ./out/cli.js --server jorje --interactive --verbose --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:jorje:debug": "node --enable-source-maps --inspect ./out/cli.js --server jorje --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:jorje:debug:verbose": "node --enable-source-maps --inspect ./out/cli.js --server jorje --interactive --verbose --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:jorje:debug:suspend": "node --enable-source-maps --inspect ./out/cli.js --server jorje --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git --suspend",
    "start:jorje:debug:verbose:suspend": "node --enable-source-maps --inspect ./out/cli.js --server jorje --interactive --verbose --workspace https://github.com/trailheadapps/dreamhouse-lwc.git --suspend",
    "start:apex-ls": "node --enable-source-maps ./out/cli.js --server nodeServer --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "lint": "wireit",
    "typecheck": "wireit"
  },
  "wireit": {
    "typecheck": {
      "command": "tsc -p test/tsconfig.json --noEmit",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "tsconfig.json",
        "test/tsconfig.json"
      ]
    },
    "compile": {
      "command": "tsc --build",
      "clean": "if-file-deleted",
      "dependencies": [
        "../apex-parser-ast:precompile"
      ],
      "output": [
        "out/**"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig*.json",
        "../../tsconfig.base.json"
      ]
    },
    "sync:fixtures": {
      "command": "node ../../scripts/sync-testbed-fixtures.js",
      "output": [
        "test/fixtures/i-have-problems/force-app/main/default/classes/**"
      ],
      "files": [
        "../../scripts/sync-testbed-fixtures.js",
        "../../packages/apex-parser-ast/test/fixtures/validation/**"
      ]
    },
    "test": {
      "command": "jest --testMatch \"**/test/**/*.test.ts\" --testPathIgnorePatterns=\"integration|accuracy/semantic-errors\" --json --outputFile=.wireit/test-results.json",
      "dependencies": [
        "compile",
        "../apex-ls:bundle",
        "sync:fixtures"
      ],
      "output": [
        ".wireit/test-results.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:integration": {
      "command": "jest --testMatch \"**/test/(integration|accuracy)/**/*.test.ts\" --testPathIgnorePatterns=\"/node_modules/\" --json --outputFile=.wireit/test-results-integration.json",
      "dependencies": [
        "compile",
        "../apex-ls:bundle",
        "sync:fixtures"
      ],
      "output": [
        ".wireit/test-results-integration.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/integration/**/*.ts",
        "test/accuracy/**/*.test.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:quality": {
      "command": "jest --testMatch \"**/test/**/*.quality.ts\"",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.quality.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage --testPathIgnorePatterns=\"integration|accuracy/semantic-errors\"",
      "dependencies": [
        "compile",
        "sync:fixtures"
      ],
      "output": [
        "coverage/**"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:perf": {
      "command": "jest --testMatch \"**/test/**/*.perf.ts\"",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.perf.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:perf:eda": {
      "command": "jest --testMatch \"**/test/**/*.perf.ts\" --testPathPattern=eda-workspace",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.perf.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:perf:lsp": {
      "command": "jest --testMatch \"**/test/**/*.perf.ts\" --testPathPattern=lsp-benchmarks",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.perf.ts",
        "**/jest.config.cjs"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache src test",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "eslint.config.mjs"
      ],
      "output": []
    },
    "lint:fix": {
      "command": "eslint --fix --color --cache --cache-location .eslintcache src test",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "eslint.config.mjs"
      ],
      "output": []
    }
  },
  "dependencies": {
    "data-structure-typed": "^2.0.4",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver": "^9.0.1",
    "web-worker": "^1.5.0"
  },
  "devDependencies": {
    "@salesforce/apex-lsp-parser-ast": "1.0.0",
    "@salesforce/apex-lsp-shared": "1.0.0"
  }
}
