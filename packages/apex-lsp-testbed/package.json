{
  "name": "@salesforce/apex-lsp-testbed",
  "version": "0.1.0",
  "description": "Testbed for performance and qualitative analysis of various Apex language server implementations",
  "type": "module",
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-testbed"
  },
  "files": [
    "dist",
    "dist/resources",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "wireit",
    "dev": "wireit",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist .wireit",
    "clean:all": "npm run clean && rimraf node_modules",
    "test": "wireit",
    "test:coverage": "wireit",
    "clean:coverage": "rimraf coverage",
    "start:demo": "node --enable-source-maps ./dist/cli.js --server demo --interactive",
    "start:jorje": "node --enable-source-maps ./dist/cli.js --server jorje --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:demo:verbose": "node --enable-source-maps ./dist/cli.js --server demo --interactive --verbose",
    "start:jorje:verbose": "node --enable-source-maps ./dist/cli.js --server jorje --interactive --verbose --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:jorje:debug": "node --enable-source-maps --inspect ./dist/cli.js --server jorje --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:jorje:debug:verbose": "node --enable-source-maps --inspect ./dist/cli.js --server jorje --interactive --verbose --workspace https://github.com/trailheadapps/dreamhouse-lwc.git",
    "start:jorje:debug:suspend": "node --enable-source-maps --inspect ./dist/cli.js --server jorje --interactive --workspace https://github.com/trailheadapps/dreamhouse-lwc.git --suspend",
    "start:jorje:debug:verbose:suspend": "node --enable-source-maps --inspect ./dist/cli.js --server jorje --interactive --verbose --workspace https://github.com/trailheadapps/dreamhouse-lwc.git --suspend"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --force && mkdir -p dist/resources && cp -r src/resources/* dist/resources/",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "src/resources/**/*"
      ],
      "output": [
        "dist/**"
      ]
    },
    "dev": {
      "command": "tsc --watch",
      "service": true,
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "src/resources/**/*"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test": {
      "command": "NODE_OPTIONS=--experimental-vm-modules jest --no-cache",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "tsconfig.json"
      ],
      "output": []
    },
    "test:coverage": {
      "command": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageDirectory=./coverage --no-cache",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "coverage/**"
      ]
    }
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/benchmark": "^2.1.5",
    "@types/node": "^18.18.0",
    "@types/vscode": "^1.85.0",
    "benchmark": "^2.1.4",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "microtime": "^3.1.1",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.2"
  },
  "keywords": [
    "apex",
    "salesforce",
    "language-server",
    "lsp",
    "testbed",
    "performance"
  ],
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "contributes": {
    "configuration": {
      "title": "Apex Language Server",
      "properties": {
        "apex.server.type": {
          "type": "string",
          "enum": [
            "node",
            "java"
          ],
          "default": "node",
          "description": "Specifies which type of language server to use. 'node' uses the Node.js-based server, 'java' uses the Java-based server (requires Java 11+)"
        },
        "apex.javaMemory": {
          "type": "number",
          "default": 4096,
          "description": "Maximum memory allocation for the Java-based language server (in MB)"
        },
        "apex.enable-semantic-errors": {
          "type": "boolean",
          "default": false,
          "description": "Enable semantic error reporting (Java server only)"
        },
        "apex.advanced.enable-completion-statistics": {
          "type": "boolean",
          "default": false,
          "description": "Enable code completion statistics (Java server only)"
        }
      }
    },
    "commands": [
      {
        "command": "apex.server.start",
        "title": "Apex: Start Language Server"
      },
      {
        "command": "apex.server.stop",
        "title": "Apex: Stop Language Server"
      },
      {
        "command": "apex.server.restart",
        "title": "Apex: Restart Language Server"
      },
      {
        "command": "apex.server.switch",
        "title": "Apex: Switch Language Server Type"
      }
    ]
  }
}
