{
  "name": "apex-language-server-extension",
  "displayName": "Apex Language Server",
  "description": "VSCode extension for Apex Language Server",
  "version": "0.1.0",
  "publisher": "salesforce",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-vscode-extension"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:apex"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "apex",
        "aliases": [
          "Apex",
          "APEX"
        ],
        "extensions": [
          ".cls",
          ".trigger"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "apex",
        "scopeName": "source.apex",
        "path": "./syntaxes/apex.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Apex",
      "properties": {
        "apex.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Apex language server"
        },
        "apex.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Apex language server"
        }
      }
    },
    "commands": [
      {
        "command": "apex.restart.server",
        "title": "Restart Apex Language Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "compile": "tsc -p ./tsconfig.build.json",
    "compile:all": "npm run compile:deps && npm run compile",
    "compile:deps": "npm run compile:server && npm run compile:client",
    "compile:server": "cd ../extension-apex-ls-ts && npm run build",
    "compile:client": "cd ../apex-lsp-vscode-client && npm run build",
    "watch": "tsc -watch -p ./tsconfig.build.json",
    "watch:all": "concurrently \"cd ../extension-apex-ls-ts && npm run dev\" \"cd ../apex-lsp-vscode-client && npm run dev\" \"npm run watch\"",
    "lint": "eslint src --ext ts",
    "test": "wireit",
    "test:coverage": "wireit",
    "clean:coverage": "rimraf coverage"
  },
  "dependencies": {
    "@salesforce/apex-lsp-vscode-client": "^0.1.0",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "@vscode/vsce": "^2.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.18.0",
    "jest": "^29.5.0",
    "typescript": "^4.9.5"
  },
  "workspaces": [
    "../extension-apex-ls-ts",
    "../apex-lsp-vscode-client"
  ],
  "wireit": {
    "test": {
      "command": "jest",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../jest.config.mjs",
        "../../babel.config.cjs"
      ],
      "output": []
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../jest.config.mjs",
        "../../babel.config.cjs"
      ],
      "output": [
        "coverage/**"
      ]
    }
  }
}