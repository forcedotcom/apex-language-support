{
  "name": "apex-language-server-extension",
  "displayName": "Salesforce Apex Language Server (Typescript)",
  "description": "VSCode extension for Apex Language Server",
  "icon": "resources/ApexTsIcon.png",
  "version": "0.5.0",
  "publisher": "salesforce",
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-vscode-extension"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.web.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "apex",
        "aliases": [
          "Apex",
          "APEX"
        ],
        "extensions": [
          ".cls",
          ".trigger",
          ".apex"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "apex-anon",
        "aliases": [
          "Apex Anonymous",
          "Anonymous Apex"
        ],
        "extensions": [
          ".apex"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "soql",
        "aliases": [
          "SOQL",
          "Salesforce Object Query Language"
        ],
        "extensions": [
          ".soql"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "apex",
        "scopeName": "source.apex",
        "path": "./grammars/apex.tmLanguage"
      },
      {
        "language": "apex-anon",
        "scopeName": "source.apex",
        "path": "./grammars/apex.tmLanguage"
      },
      {
        "language": "soql",
        "scopeName": "source.soql",
        "path": "./grammars/soql.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "apex",
        "path": "./snippets/apex.json"
      },
      {
        "language": "apex-anon",
        "path": "./snippets/apex.json"
      },
      {
        "language": "soql",
        "path": "./snippets/soql.json"
      },
      {
        "language": "apex",
        "path": "./snippets/soql.json"
      },
      {
        "language": "apex-anon",
        "path": "./snippets/soql.json"
      }
    ],
    "standardApexLibrary": "./out/resources/StandardApexLibrary.zip",
    "configuration": {
      "title": "%configuration.apex.title%",
      "properties": {
        "apex.enable": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.enable.description%"
        },
        "apex.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "%configuration.apex-ls-ts.trace.server.description%"
        },
        "apex.debug": {
          "type": "string",
          "enum": [
            "off",
            "inspect",
            "inspect-brk"
          ],
          "default": "off",
          "description": "%configuration.apex-ls-ts.debug.description%"
        },
        "apex.debugPort": {
          "type": "number",
          "default": 6009,
          "description": "%configuration.apex-ls-ts.debugPort.description%"
        },
        "apex.environment.serverMode": {
          "type": "string",
          "enum": [
            "production",
            "development"
          ],
          "default": "production",
          "description": "%configuration.apex-ls-ts.environment.serverMode.description%"
        },
        "apex.commentCollection.enableCommentCollection": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.enableCommentCollection.description%"
        },
        "apex.commentCollection.includeSingleLineComments": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.apex-ls-ts.commentCollection.includeSingleLineComments.description%"
        },
        "apex.commentCollection.associateCommentsWithSymbols": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.associateCommentsWithSymbols.description%"
        },
        "apex.commentCollection.enableForDocumentChanges": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.enableForDocumentChanges.description%"
        },
        "apex.commentCollection.enableForDocumentOpen": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.enableForDocumentOpen.description%"
        },
        "apex.commentCollection.enableForDocumentSymbols": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.apex-ls-ts.commentCollection.enableForDocumentSymbols.description%"
        },
        "apex.commentCollection.enableForFoldingRanges": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.enableForFoldingRanges.description%"
        },
        "apex.performance.commentCollectionMaxFileSize": {
          "type": "number",
          "default": 102400,
          "description": "%configuration.apex-ls-ts.performance.commentCollectionMaxFileSize.description%"
        },
        "apex.performance.useAsyncCommentProcessing": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.performance.useAsyncCommentProcessing.description%"
        },
        "apex.performance.documentChangeDebounceMs": {
          "type": "number",
          "default": 300,
          "description": "%configuration.apex-ls-ts.performance.documentChangeDebounceMs.description%"
        },
        "apex.environment.profilingMode": {
          "type": "string",
          "enum": [
            "none",
            "full",
            "interactive"
          ],
          "default": "none",
          "description": "%configuration.apex-ls-ts.environment.profilingMode.description%"
        },
        "apex.environment.profilingType": {
          "type": "string",
          "enum": [
            "cpu",
            "heap",
            "both"
          ],
          "default": "cpu",
          "description": "%configuration.apex-ls-ts.environment.profilingType.description%"
        },
        "apex.environment.profilingTag": {
          "type": "string",
          "default": "",
          "description": "%configuration.apex-ls-ts.environment.profilingTag.description%"
        },
        "apex.environment.jsHeapSizeGB": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 32,
          "description": "%configuration.apex-ls-ts.environment.jsHeapSizeGB.description%"
        },
        "apex.environment.additionalDocumentSchemes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "scheme": {
                "type": "string",
                "description": "%configuration.apex-ls-ts.environment.additionalDocumentSchemes.scheme.description%"
              },
              "excludeCapabilities": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "documentSymbol",
                    "hover",
                    "foldingRange",
                    "diagnostic",
                    "completion",
                    "definition",
                    "codeLens",
                    "executeCommand"
                  ]
                },
                "description": "%configuration.apex-ls-ts.environment.additionalDocumentSchemes.excludeCapabilities.description%"
              }
            },
            "required": [
              "scheme"
            ]
          },
          "default": [],
          "description": "%configuration.apex-ls-ts.environment.additionalDocumentSchemes.description%"
        },
        "apex.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info",
            "log",
            "debug"
          ],
          "default": "info",
          "description": "%configuration.apex-ls-ts.logLevel.description%"
        },
        "apex.worker.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "%configuration.apex-ls-ts.worker.logLevel.description%"
        },
        "apex.worker.enablePerformanceLogs": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.apex-ls-ts.worker.enablePerformanceLogs.description%"
        },
        "apex.worker.logCategories": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "STARTUP",
              "LSP",
              "SYMBOLS",
              "COMPLETION",
              "DIAGNOSTICS",
              "PERFORMANCE"
            ]
          },
          "default": [
            "STARTUP",
            "LSP",
            "SYMBOLS",
            "COMPLETION",
            "DIAGNOSTICS"
          ],
          "description": "%configuration.apex-ls-ts.worker.logCategories.description%"
        },
        "apex.custom": {
          "type": "object",
          "default": {},
          "description": "%configuration.apex-ls-ts.custom.description%"
        },
        "apex.findMissingArtifact": {
          "type": "object",
          "default": {
            "enabled": true,
            "blockingWaitTimeoutMs": 2000,
            "indexingBarrierPollMs": 100,
            "maxCandidatesToOpen": 3,
            "timeoutMsHint": 1500,
            "enablePerfMarks": false
          },
          "description": "%configuration.apex-ls-ts.findMissingArtifact.description%",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "%configuration.apex-ls-ts.findMissingArtifact.enabled.description%"
            },
            "blockingWaitTimeoutMs": {
              "type": "number",
              "default": 2000,
              "description": "%configuration.apex-ls-ts.findMissingArtifact.blockingWaitTimeoutMs.description%"
            },
            "indexingBarrierPollMs": {
              "type": "number",
              "default": 100,
              "description": "%configuration.apex-ls-ts.findMissingArtifact.indexingBarrierPollMs.description%"
            },
            "maxCandidatesToOpen": {
              "type": "number",
              "default": 3,
              "description": "%configuration.apex-ls-ts.findMissingArtifact.maxCandidatesToOpen.description%"
            },
            "timeoutMsHint": {
              "type": "number",
              "default": 1500,
              "description": "%configuration.apex-ls-ts.findMissingArtifact.timeoutMsHint.description%"
            },
            "enablePerfMarks": {
              "type": "boolean",
              "default": false,
              "description": "%configuration.apex-ls-ts.findMissingArtifact.enablePerfMarks.description%"
            }
          }
        },
        "apex.loadWorkspace": {
          "type": "object",
          "description": "%configuration.apex-ls-ts.loadWorkspace.description%",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "%configuration.apex-ls-ts.loadWorkspace.enabled.description%"
            },
            "maxConcurrency": {
              "type": "number",
              "default": 50,
              "description": "%configuration.apex-ls-ts.loadWorkspace.maxConcurrency.description%"
            },
            "yieldInterval": {
              "type": "number",
              "default": 50,
              "description": "%configuration.apex-ls-ts.loadWorkspace.yieldInterval.description%"
            },
            "yieldDelayMs": {
              "type": "number",
              "default": 25,
              "description": "%configuration.apex-ls-ts.loadWorkspace.yieldDelayMs.description%"
            },
            "batchSize": {
              "type": "number",
              "default": 100,
              "description": "%configuration.apex-ls-ts.loadWorkspace.batchSize.description%"
            }
          }
        },
        "apex.queueProcessing": {
          "type": "object",
          "description": "%configuration.apex-ls-ts.queueProcessing.description%",
          "properties": {
            "maxConcurrency": {
              "type": "object",
              "description": "%configuration.apex-ls-ts.queueProcessing.maxConcurrency.description%",
              "properties": {
                "CRITICAL": {
                  "type": "number",
                  "default": 100,
                  "description": "%configuration.apex-ls-ts.queueProcessing.maxConcurrency.CRITICAL.description%"
                },
                "IMMEDIATE": {
                  "type": "number",
                  "default": 50,
                  "description": "%configuration.apex-ls-ts.queueProcessing.maxConcurrency.IMMEDIATE.description%"
                },
                "HIGH": {
                  "type": "number",
                  "default": 50,
                  "description": "%configuration.apex-ls-ts.queueProcessing.maxConcurrency.HIGH.description%"
                },
                "NORMAL": {
                  "type": "number",
                  "default": 25,
                  "description": "%configuration.apex-ls-ts.queueProcessing.maxConcurrency.NORMAL.description%"
                },
                "LOW": {
                  "type": "number",
                  "default": 10,
                  "description": "%configuration.apex-ls-ts.queueProcessing.maxConcurrency.LOW.description%"
                },
                "BACKGROUND": {
                  "type": "number",
                  "default": 5,
                  "description": "%configuration.apex-ls-ts.queueProcessing.maxConcurrency.BACKGROUND.description%"
                }
              }
            },
            "maxTotalConcurrency": {
              "type": "number",
              "description": "%configuration.apex-ls-ts.queueProcessing.maxTotalConcurrency.description%"
            },
            "yieldInterval": {
              "type": "number",
              "default": 50,
              "description": "%configuration.apex-ls-ts.queueProcessing.yieldInterval.description%"
            },
            "yieldDelayMs": {
              "type": "number",
              "default": 25,
              "description": "%configuration.apex-ls-ts.queueProcessing.yieldDelayMs.description%"
            }
          }
        },
        "apex.scheduler": {
          "type": "object",
          "description": "%configuration.apex-ls-ts.scheduler.description%",
          "properties": {
            "queueCapacity": {
              "type": "object",
              "description": "%configuration.apex-ls-ts.scheduler.queueCapacity.description%",
              "properties": {
                "CRITICAL": {
                  "type": "number",
                  "default": 200,
                  "description": "%configuration.apex-ls-ts.scheduler.queueCapacity.CRITICAL.description%"
                },
                "IMMEDIATE": {
                  "type": "number",
                  "default": 200,
                  "description": "%configuration.apex-ls-ts.scheduler.queueCapacity.IMMEDIATE.description%"
                },
                "HIGH": {
                  "type": "number",
                  "default": 200,
                  "description": "%configuration.apex-ls-ts.scheduler.queueCapacity.HIGH.description%"
                },
                "NORMAL": {
                  "type": "number",
                  "default": 200,
                  "description": "%configuration.apex-ls-ts.scheduler.queueCapacity.NORMAL.description%"
                },
                "LOW": {
                  "type": "number",
                  "default": 200,
                  "description": "%configuration.apex-ls-ts.scheduler.queueCapacity.LOW.description%"
                },
                "BACKGROUND": {
                  "type": "number",
                  "default": 200,
                  "description": "%configuration.apex-ls-ts.scheduler.queueCapacity.BACKGROUND.description%"
                }
              }
            },
            "maxHighPriorityStreak": {
              "type": "number",
              "default": 50,
              "description": "%configuration.apex-ls-ts.scheduler.maxHighPriorityStreak.description%"
            },
            "idleSleepMs": {
              "type": "number",
              "default": 1,
              "description": "%configuration.apex-ls-ts.scheduler.idleSleepMs.description%"
            },
            "queueStateNotificationIntervalMs": {
              "type": "number",
              "default": 200,
              "description": "%configuration.apex-ls-ts.scheduler.queueStateNotificationIntervalMs.description%"
            }
          }
        },
        "apex.deferredReferenceProcessing": {
          "type": "object",
          "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.description%",
          "properties": {
            "deferredBatchSize": {
              "type": "number",
              "default": 50,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.deferredBatchSize.description%"
            },
            "initialReferenceBatchSize": {
              "type": "number",
              "default": 50,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.initialReferenceBatchSize.description%"
            },
            "maxRetryAttempts": {
              "type": "number",
              "default": 10,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.maxRetryAttempts.description%"
            },
            "retryDelayMs": {
              "type": "number",
              "default": 100,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.retryDelayMs.description%"
            },
            "maxRetryDelayMs": {
              "type": "number",
              "default": 5000,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.maxRetryDelayMs.description%"
            },
            "queueCapacityThreshold": {
              "type": "number",
              "default": 90,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.queueCapacityThreshold.description%"
            },
            "queueDrainThreshold": {
              "type": "number",
              "default": 75,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.queueDrainThreshold.description%"
            },
            "queueFullRetryDelayMs": {
              "type": "number",
              "default": 10000,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.queueFullRetryDelayMs.description%"
            },
            "maxQueueFullRetryDelayMs": {
              "type": "number",
              "default": 30000,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.maxQueueFullRetryDelayMs.description%"
            },
            "circuitBreakerFailureThreshold": {
              "type": "number",
              "default": 5,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.circuitBreakerFailureThreshold.description%"
            },
            "circuitBreakerResetThreshold": {
              "type": "number",
              "default": 50,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.circuitBreakerResetThreshold.description%"
            },
            "maxDeferredTasksPerSecond": {
              "type": "number",
              "default": 10,
              "description": "%configuration.apex-ls-ts.deferredReferenceProcessing.maxDeferredTasksPerSecond.description%"
            }
          }
        },
        "apex.symbolGraph": {
          "type": "object",
          "description": "Symbol graph pre-population settings for improved first-file performance. When enabled, specified namespaces are loaded into memory during server startup, eliminating first-file compilation penalty. Trade-off: Adds startup time (Database: ~300ms, System: ~900ms).",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable symbol graph pre-population at server startup. Eliminates ~60-80ms first-file penalty with only ~190ms startup cost for Database and System namespaces."
            },
            "preloadNamespaces": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "*",
                  "Database",
                  "System",
                  "Schema",
                  "ConnectApi",
                  "Cache",
                  "Dom",
                  "Flow",
                  "KbManagement",
                  "Messaging",
                  "QuickAction",
                  "Reports",
                  "Site",
                  "Support",
                  "UserProvisioning"
                ]
              },
              "default": [
                "Database",
                "System"
              ],
              "description": "Standard Apex namespaces to pre-populate. Use \"*\" to load all namespaces (for performance measurement). Common choices: Database (database operations), System (core utilities)."
            }
          }
        },
        "apex.telemetry.localTracingEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Write telemetry events to a timestamped JSONL file in .apex-telemetry/ in the workspace root. Each session creates a new file. Useful for development and debugging."
        }
      }
    },
    "commands": [
      {
        "command": "apex-ls-ts.restart.server",
        "title": "%commands.apex-ls-ts.restart.server.title%"
      },
      {
        "command": "apex-ls-ts.setLogLevel.error",
        "title": "%commands.apex-ls-ts.setLogLevel.error.title%"
      },
      {
        "command": "apex-ls-ts.setLogLevel.warning",
        "title": "%commands.apex-ls-ts.setLogLevel.warning.title%"
      },
      {
        "command": "apex-ls-ts.setLogLevel.info",
        "title": "%commands.apex-ls-ts.setLogLevel.info.title%"
      },
      {
        "command": "apex-ls-ts.setLogLevel.debug",
        "title": "%commands.apex-ls-ts.setLogLevel.debug.title%"
      },
      {
        "command": "apex.showAggregatedLogs",
        "title": "%commands.apex.showAggregatedLogs.title%"
      },
      {
        "command": "apex-ls-ts.showGraph",
        "title": "%commands.apex-ls-ts.showGraph.title%"
      },
      {
        "command": "apex-ls-ts.showQueueState",
        "title": "%commands.apex-ls-ts.showQueueState.title%"
      },
      {
        "command": "apex-ls-ts.showPerformanceSettings",
        "title": "%commands.apex-ls-ts.showPerformanceSettings.title%"
      },
      {
        "command": "apex.profiling.start",
        "title": "%commands.apex.profiling.start.title%"
      },
      {
        "command": "apex.profiling.stop",
        "title": "%commands.apex.profiling.stop.title%"
      },
      {
        "command": "apex.profiling.status",
        "title": "%commands.apex.profiling.status.title%"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apex-explorer",
          "title": "%viewsContainers.apex-explorer.title%",
          "icon": "resources/ApexTsIcon.png"
        }
      ]
    }
  },
  "scripts": {
    "precompile": "wireit",
    "compile": "wireit",
    "bundle": "wireit",
    "package": "wireit",
    "rebuild": "npm run clean && npm run build",
    "test": "wireit",
    "test:coverage": "wireit",
    "clean": "rimraf out dist extension .wireit coverage grammars tsconfig.tsbuildinfo server-bundle",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "wireit"
  },
  "wireit": {
    "precompile": {
      "command": "shx cp -R ../../node_modules/@salesforce/apex-tmlanguage/grammars . && shx mkdir -p out && shx cp package.nls*.json language-configuration.json out/",
      "output": [
        "grammars/**"
      ],
      "files": [
        "package.nls*.json",
        "language-configuration.json",
        "../../node_modules/@salesforce/apex-tmlanguage/grammars/**"
      ]
    },
    "compile": {
      "command": "tsc --build",
      "clean": "if-file-deleted",
      "dependencies": [
        "precompile",
        "../apex-parser-ast:precompile"
      ],
      "output": [
        "out/**/*.js",
        "out/**/*.d.ts",
        "out/.tsbuildinfo"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig*.json",
        "../../tsconfig.base.json"
      ]
    },
    "bundle": {
      "command": "tsx esbuild.config.ts",
      "dependencies": [
        "compile",
        "../esbuild-presets:compile",
        "../apex-ls:bundle"
      ],
      "output": [
        "extension/**",
        "dist/**",
        "server-bundle/**",
        "dist/package.json"
      ],
      "files": [
        "src/**/*.ts",
        "esbuild.config.ts",
        "out/extension.js"
      ]
    },
    "package": {
      "command": "cd dist && vsce package --out ../ --no-dependencies",
      "dependencies": [
        "bundle"
      ],
      "output": [
        "*.vsix"
      ],
      "files": [
        "dist/package.json"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests --json --outputFile=.wireit/test-results.json",
      "dependencies": [
        "compile"
      ],
      "output": [
        ".wireit/test-results.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage --passWithNoTests",
      "dependencies": [
        "compile"
      ],
      "output": [
        "coverage/**"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache src test",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "eslint.config.mjs"
      ],
      "output": []
    },
    "lint:fix": {
      "command": "eslint --fix --color --cache --cache-location .eslintcache src test",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "eslint.config.mjs"
      ],
