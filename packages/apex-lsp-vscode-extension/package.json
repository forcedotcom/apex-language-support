{
  "name": "apex-language-server-extension",
  "displayName": "Apex Language Server",
  "description": "VSCode extension for Apex Language Server",
  "version": "0.1.0",
  "publisher": "salesforce",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-vscode-extension"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "main": "./extension/dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "apex",
        "aliases": [
          "Apex",
          "APEX"
        ],
        "extensions": [
          ".cls",
          ".trigger",
          ".apex"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "apex",
        "scopeName": "source.apex",
        "path": "./grammars/apex.tmLanguage"
      },
      {
        "scopeName": "source.soql",
        "path": "./grammars/soql.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "apex",
        "path": "./snippets/apex.json"
      }
    ],
    "configuration": {
      "title": "Apex",
      "properties": {
        "apex.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Apex language server"
        },
        "apex.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Apex language server"
        },
        "apex.debug": {
          "type": "boolean",
          "default": false,
          "description": "Run Apex language server in debug mode"
        },
        "apex.debugPort": {
          "type": "number",
          "default": 0,
          "description": "Port to use for debugging (0 for random port)"
        }
      }
    },
    "commands": [
      {
        "command": "apex.restart.server",
        "title": "Restart Apex Language Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apex-explorer",
          "title": "Apex Explorer",
          "icon": "media/apex-icon.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "apexOutline",
          "name": "Apex Outline"
        }
      ]
    }
  },
  "scripts": {
    "precompile": "npm install && npm run copy:files",
    "compile": "tsc --build",
    "copy-server-bundle": "shx rm -rf ./server-bundle && shx mkdir -p ./server-bundle && shx cp -R ../apex-ls-node/bundle/* ./server-bundle/",
    "bundle": "npm run copy-server-bundle && node ../../scripts/build-bundle.js && shx mkdir -p extension/dist/snippets && shx cp -R snippets/* extension/dist/snippets/ && shx cp -R grammars extension/dist/ && shx cp language-configuration.json extension/dist/ && shx cp bundle/extension.js extension/dist/extension.js && shx mkdir -p extension/dist/server-bundle && shx cp -R ./server-bundle/* extension/dist/server-bundle/",
    "copy:files": "shx cp -R ../../node_modules/@salesforce/apex-tmlanguage/grammars .",
    "package:vsix": "yes | vsce package --allow-star-activation",
    "package:all": "npm run compile && npm run bundle && npm run package:vsix",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --coverageDirectory=./coverage --passWithNoTests",
    "clean": "rimraf dist bundle extension server-bundle *.tsbuildinfo .turbo grammars node_modules",
    "clean:all": "npm run clean && rimraf node_modules",
    "clean:coverage": "rimraf coverage"
  },
  "dependencies": {
    "@salesforce/apex-ls-node": "1.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@salesforce/apex-tmlanguage": "1.8.0",
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "@vscode/vsce": "^2.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.18.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "typescript": "^5.8.2"
  },
  "workspaces": [
    "../apex-ls-node"
  ]
}
