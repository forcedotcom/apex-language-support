{
  "name": "apex-language-server-extension",
  "displayName": "Salesforce Apex Language Server (Typescript)",
  "description": "VSCode extension for Apex Language Server",
  "icon": "resources/ApexTsIcon.png",
  "version": "0.1.10",
  "publisher": "salesforce",
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-vscode-extension"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.web.js",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:apex",
    "onLanguage:apex-anon",
    "onLanguage:soql"
  ],
  "contributes": {
    "languages": [
      {
        "id": "apex",
        "aliases": [
          "Apex",
          "APEX"
        ],
        "extensions": [
          ".cls",
          ".trigger",
          ".apex"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "apex-anon",
        "aliases": [
          "Apex Anonymous",
          "Anonymous Apex"
        ],
        "extensions": [
          ".apex"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "soql",
        "aliases": [
          "SOQL",
          "Salesforce Object Query Language"
        ],
        "extensions": [
          ".soql"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "apex",
        "scopeName": "source.apex",
        "path": "./grammars/apex.tmLanguage"
      },
      {
        "language": "apex-anon",
        "scopeName": "source.apex",
        "path": "./grammars/apex.tmLanguage"
      },
      {
        "language": "soql",
        "scopeName": "source.soql",
        "path": "./grammars/soql.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "apex",
        "path": "./snippets/apex.json"
      },
      {
        "language": "apex-anon",
        "path": "./snippets/apex.json"
      },
      {
        "language": "soql",
        "path": "./snippets/soql.json"
      },
      {
        "language": "apex",
        "path": "./snippets/soql.json"
      },
      {
        "language": "apex-anon",
        "path": "./snippets/soql.json"
      }
    ],
    "configuration": {
      "title": "Apex Language Server",
      "properties": {
        "apex.enable": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.enable.description%"
        },
        "apex.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "%configuration.apex-ls-ts.trace.server.description%"
        },
        "apex.debug": {
          "type": "string",
          "enum": [
            "off",
            "inspect",
            "inspect-brk"
          ],
          "default": "off",
          "description": "%configuration.apex-ls-ts.debug.description%"
        },
        "apex.debugPort": {
          "type": "number",
          "default": 6009,
          "description": "%configuration.apex-ls-ts.debugPort.description%"
        },
        "apex.commentCollection.enableCommentCollection": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.enableCommentCollection.description%"
        },
        "apex.commentCollection.includeSingleLineComments": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.apex-ls-ts.commentCollection.includeSingleLineComments.description%"
        },
        "apex.commentCollection.associateCommentsWithSymbols": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.associateCommentsWithSymbols.description%"
        },
        "apex.commentCollection.enableForDocumentChanges": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.enableForDocumentChanges.description%"
        },
        "apex.commentCollection.enableForDocumentOpen": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.enableForDocumentOpen.description%"
        },
        "apex.commentCollection.enableForDocumentSymbols": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.apex-ls-ts.commentCollection.enableForDocumentSymbols.description%"
        },
        "apex.commentCollection.enableForFoldingRanges": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.commentCollection.enableForFoldingRanges.description%"
        },
        "apex.performance.commentCollectionMaxFileSize": {
          "type": "number",
          "default": 102400,
          "description": "%configuration.apex-ls-ts.performance.commentCollectionMaxFileSize.description%"
        },
        "apex.performance.useAsyncCommentProcessing": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.apex-ls-ts.performance.useAsyncCommentProcessing.description%"
        },
        "apex.performance.documentChangeDebounceMs": {
          "type": "number",
          "default": 300,
          "description": "%configuration.apex-ls-ts.performance.documentChangeDebounceMs.description%"
        },
        "apex.environment.enablePerformanceLogging": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.apex-ls-ts.environment.enablePerformanceLogging.description%"
        },
        "apex.resources.loadMode": {
          "type": "string",
          "enum": [
            "lazy",
            "full"
          ],
          "default": "lazy",
          "description": "%configuration.apex-ls-ts.resources.loadMode.description%"
        },
        "apex.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info",
            "log",
            "debug"
          ],
          "default": "info",
          "description": "%configuration.apex-ls-ts.logLevel.description%"
        },
        "apex.worker.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Log level for Apex worker"
        },
        "apex.worker.enablePerformanceLogs": {
          "type": "boolean",
          "default": false,
          "description": "Enable performance timing logs"
        },
        "apex.worker.logCategories": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "STARTUP",
              "LSP",
              "SYMBOLS",
              "COMPLETION",
              "DIAGNOSTICS",
              "PERFORMANCE"
            ]
          },
          "default": [
            "STARTUP",
            "LSP",
            "SYMBOLS",
            "COMPLETION",
            "DIAGNOSTICS"
          ],
          "description": "Categories of worker logs to show"
        },
        "apex.custom": {
          "type": "object",
          "default": {},
          "description": "Custom configuration for the Apex Language Server"
        }
      }
    },
    "commands": [
      {
        "command": "apex.restart.server",
        "title": "%commands.apex-ls-ts.restart.server.title%"
      },
      {
        "command": "apex.setLogLevel.error",
        "title": "%commands.apex-ls-ts.setLogLevel.error.title%"
      },
      {
        "command": "apex.setLogLevel.warning",
        "title": "%commands.apex-ls-ts.setLogLevel.warning.title%"
      },
      {
        "command": "apex.setLogLevel.info",
        "title": "%commands.apex-ls-ts.setLogLevel.info.title%"
      },
      {
        "command": "apex.setLogLevel.debug",
        "title": "%commands.apex-ls-ts.setLogLevel.debug.title%"
      },
      {
        "command": "apex.restart.server",
        "title": "Restart Apex Language Server"
      },
      {
        "command": "apex.showAggregatedLogs",
        "title": "Show All Apex Logs"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apex-explorer",
          "title": "%viewsContainers.apex-explorer.title%",
          "icon": "resources/ApexTsIcon.png"
        }
      ]
    }
  },
  "scripts": {
    "precompile": "shx cp -R ../../node_modules/@salesforce/apex-tmlanguage/grammars . && shx mkdir -p out && shx cp package.nls*.json language-configuration.json out/",
    "compile": "tsc --build",
    "bundle": "tsup",
    "build": "npm run precompile && npm run compile && npm run bundle && npm run post-build",
    "rebuild": "npm run clean && npm install && npm run build",
    "copy:files": "shx cp -R ../../node_modules/@salesforce/apex-tmlanguage/grammars .",
    "post-build": "node scripts/post-build.js",
    "package": "cd dist && vsce package --out ../",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --coverageDirectory=./coverage --passWithNoTests",
    "clean": "rimraf out dist extension .turbo coverage grammars tsconfig.tsbuildinfo server-bundle",
    "clean:all": "npm run clean && rimraf node_modules",
    "clean:coverage": "rimraf coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@salesforce/apex-ls": "1.0.0",
    "os-browserify": "^0.3.0",
    "url-browserify": "^2.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8",
    "web-worker": "^1.5.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@rollup/plugin-typescript": "^11.1.5",
    "@salesforce/apex-tmlanguage": "1.8.0",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.1.5",
    "@vscode/vsce": "^2.15.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "events": "^3.3.0",
    "memfs": "^4.14.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "shx": "^0.3.4",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  },
  "workspaces": [
    "../apex-ls"
  ]
}
