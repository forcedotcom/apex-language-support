{
  "name": "@salesforce/apex-lsp-logging",
  "version": "1.0.0",
  "description": "Logging interface for Apex Language Server",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-logging"
  },
  "scripts": {
    "compile": "tsc --build",
    "bundle": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageDirectory=./coverage",
    "clean": "rimraf out dist .turbo coverage tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {}
}
