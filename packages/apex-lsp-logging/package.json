{
  "name": "@salesforce/apex-lsp-logging",
  "version": "1.0.0",
  "description": "Logging interface for Apex Language Server",
  "main": "bundle/index.js",
  "module": "bundle/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./bundle/index.mjs",
    "require": "./bundle/index.js"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-logging"
  },
  "scripts": {
    "compile": "tsc --build",
    "bundle": "npm run compile && tsup",
    "prebuild": "npm run clean",
    "dev": "tsup --watch",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageDirectory=./coverage",
    "clean": "rimraf dist bundle *.tsbuildinfo .turbo coverage",
    "clean:all": "npm run clean && rimraf node_modules"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "rimraf": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  }
}
