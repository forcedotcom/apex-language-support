{
  "extends": "./tsconfig.base.shared.json",
  "compilerOptions": {
    "outDir": "./out/worker",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022",
      "WebWorker",
      "WebWorker.ImportScripts",
      "DOM",
      "DOM.Iterable",
      "ESNext.AsyncIterable",
      "ESNext.Disposable"
    ],
    "tsBuildInfoFile": "./out/worker/.tsbuildinfo"
  },
  "include": [
    "src/server.ts",
    "src/core/**/*.ts",
    "src/entry-points/worker.ts",
    "src/environments/worker/**/*.ts",
    "src/communication/Interfaces.ts",
    "src/communication/MessageTransport.ts",
    "src/communication/MessageTransports.ts",
    "src/communication/PlatformBridges.ts",
    "src/communication/PlatformBridges.worker.ts",
    "src/communication/MessageBridge.ts",
    "src/communication/CoreBridge.ts",
    "src/storage/StorageInterface.ts",
    "src/storage/BrowserStorage.ts",
    "src/storage/MemoryStorage.ts",
    "src/storage/StorageImplementations.ts",
    "src/storage/StorageFactory.ts",
    "src/server/LazyLSPServer.ts",
    "src/server/LCSAdapter.ts",
    "src/utils/EnvironmentUtils.ts",
    "src/utils/WorkerLogNotificationHandler.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "src/index.ts",
    "src/index.browser.ts",
    "src/server.node.ts",
    "src/entry-points/browser.ts",
    "src/entry-points/node.ts",
    "src/environments/browser/**/*.ts",
    "src/environments/node/**/*.ts",
    "src/communication/BrowserClient.ts",
    "src/communication/NodeClient.ts",
    "src/communication/NodeBridge.ts",
    "src/communication/PlatformBridges.browser.ts",
    "src/client/**/*.ts",
    "src/launcher/**/*.ts",
    "src/utils/BrowserLogNotificationHandler.ts",
    "node_modules",
    "out",
    "dist",
    "tsup.config.ts"
  ],
  "references": [
    { "path": "../apex-lsp-shared" },
    { "path": "../apex-parser-ast" },
    { "path": "../lsp-compliant-services" }
  ]
}
