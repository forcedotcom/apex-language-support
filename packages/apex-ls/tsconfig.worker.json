{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out/worker",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "WebWorker"],
    "tsBuildInfoFile": "./out/worker/.tsbuildinfo",
    "skipLibCheck": true,
    "incremental": true,
    "typeRoots": ["./src/types", "../../node_modules/@types"],
    "types": ["webworker"]
  },
  "include": [
    "src/worker.ts",
    "src/minimal-worker.ts",
    "src/types.ts",
    "src/communication/interfaces.ts",
    "src/communication/interfaces.worker.ts",
    "src/communication/MessageBridge.ts",
    "src/communication/MessageBridgeFactory.worker.ts",
    "src/communication/PlatformBridges.worker.ts",
    "src/communication/UnifiedClient.ts",
    "src/server/ConnectionFactory.worker.ts",
    "src/server/ConnectionFactoryInterface.ts",
    "src/server/UnifiedApexLanguageServer.ts",
    "src/storage/ApexStorageInterface.ts",
    "src/storage/ApexStorageManager.ts",
    "src/storage/StorageInterface.ts",
    "src/storage/UnifiedStorageFactory.worker.ts",
    "src/storage/WebWorkerStorage.ts",
    "src/storage/WorkerStorageFactory.ts",
    "src/utils/EnvironmentDetector.worker.ts",
    "src/utils/EnvironmentTypeGuards.ts",
    "src/utils/LoggerAdapter.ts",
    "src/utils/LoggingUtils.ts",
    "src/utils/WorkerLoggerFactory.ts",
    "src/utils/WorkerLogNotificationHandler.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "src/**/*.browser.ts",
    "src/**/*.node.ts",
    "src/browser.ts",
    "src/node.ts",
    "node_modules",
    "out",
    "dist",
    "tsup.config.ts"
  ],
  "references": [
    { "path": "../apex-lsp-shared" },
    { "path": "../apex-parser-ast" },
    { "path": "../lsp-compliant-services" }
  ]
}
