{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out/worker",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022",
      "WebWorker",
      "WebWorker.ImportScripts",
      "DOM",
      "DOM.Iterable"
    ],
    "tsBuildInfoFile": "./out/worker/.tsbuildinfo",
    "skipLibCheck": true,
    "incremental": true,
    "typeRoots": ["./src/types", "../../node_modules/@types"],
    "types": ["webworker", "node", "events"]
  },
  "include": ["src/**/*.ts", "src/**/*.worker.ts"],
  "exclude": [
    "src/**/*.browser.ts",
    "src/**/*.node.ts", 
    "src/browser.ts",
    "src/utils/EnvironmentDetector.browser.ts",
    "src/communication/factory.browser.ts",
    "src/communication/Client.ts",
    "src/communication/NodePlatformBridge.ts",
    "src/communication/index.ts",
    "src/index.ts",
    "src/node.ts",
    "node_modules",
    "out",
    "dist",
    "tsup.config.ts"
  ],
  "references": [
    { "path": "../apex-lsp-shared" },
    { "path": "../apex-parser-ast" },
    { "path": "../lsp-compliant-services" }
  ]
}
