{
  "extends": "./tsconfig.base.shared.json",
  "compilerOptions": {
    "outDir": "./out/browser",
    "module": "ESNext",
    "moduleResolution": "bundler", 
    "lib": [
      "ES2022",
      "DOM",
      "WebWorker",
      "DOM.Iterable",
      "WebWorker.ImportScripts", 
      "ESNext.AsyncIterable",
      "ESNext.Disposable"
    ],
    "tsBuildInfoFile": "./out/browser/.tsbuildinfo"
  },
  "include": [
    "src/browser.ts",
    "src/index.browser.ts",
    "src/types.ts",
    "src/communication/Interfaces.ts",
    "src/communication/MessageTransports.ts",
    "src/communication/PlatformBridges.ts",
    "src/communication/PlatformBridges.browser.ts",
    "src/communication/CoreBridge.ts",
    "src/communication/BrowserClient.ts",
    "src/server/BrowserConnection.ts",
    "src/server/BrowserConnectionFactory.ts",
    "src/server/ConnectionFactory.browser.ts",
    "src/server/ConnectionFactory.ts",
    "src/server/ConnectionFactoryInterface.ts",
    "src/storage/ApexStorageManager.ts",
    "src/storage/StorageInterface.ts",
    "src/storage/StorageImplementations.ts",
    "src/storage/StorageFactory.ts",
    "src/utils/Environment.ts",
    "src/utils/Logging.ts",
    "src/utils/BrowserLogNotificationHandler.ts",
    "src/utils/BrowserUtils.ts",
    "src/utils/EnvironmentDetector.browser.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "src/**/*.node.ts",
    "src/**/*.worker.ts",
    "src/worker.ts",
    "src/node.ts",
    "src/minimal-worker.ts",
    "src/index.ts",
    "src/communication/index.ts",
    "src/communication/NodeClient.ts",
    "src/communication/NodeBridge.ts",
    "src/communication/WorkerMessageBridge.ts",
    "src/communication/WorkerMessageBridgeFactory.ts",
    "src/communication/MessageBridgeFactory.ts",
    "src/communication/MessageBridgeFactory.node.ts",
    "src/communication/MessageBridgeFactory.worker.ts",
    "src/communication/PlatformBridges.worker.ts",
    "src/communication/factory.ts",
    "src/server/NodeConnectionFactory.ts",
    "src/server/WorkerConnectionFactory.ts",
    "src/storage/NodeStorageFactory.ts",
    "src/storage/WebWorkerStorage.ts",
    "src/utils/NodeLoggerFactory.ts",
    "src/utils/WorkerLoggerFactory.ts",
    "src/utils/EnvironmentDetector.node.ts",
    "node_modules",
    "out",
    "dist",
    "tsup.config.ts"
  ],
  "references": [
    { "path": "../apex-lsp-shared" },
    { "path": "../apex-parser-ast" },
    { "path": "../lsp-compliant-services" }
  ]
}
