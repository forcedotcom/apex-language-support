{
  "extends": "./tsconfig.base.shared.json",
  "compilerOptions": {
    "outDir": "./out/node",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "ESNext.AsyncIterable", "ESNext.Disposable"],
    "tsBuildInfoFile": "./out/node/.tsbuildinfo",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.node.ts",
    "src/**/*.browser.ts",
    "src/**/*.worker.ts",
    "src/server/ApexLanguageServer.ts",
    "src/communication/NodeClient.ts",
    "src/polyfills/**/*.ts"
  ],
  "exclude": [
    "src/browser.ts",
    "src/index.ts",

    "src/client/**/*",
    "src/launcher/**/*",
    "node_modules",
    "out",
    "dist",
    "tsup.config.ts"
  ],
  "references": [
    { "path": "../apex-lsp-shared" },
    { "path": "../apex-parser-ast" },
    { "path": "../lsp-compliant-services" }
  ]
}
