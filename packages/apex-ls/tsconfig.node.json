{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out/node",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "tsBuildInfoFile": "./out/node/.tsbuildinfo",
    "skipLibCheck": true,
    "incremental": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["../../node_modules/@types", "./src/types"],
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/node.ts",
    "src/server/index.node.ts",
    "src/server/NodeConnectionFactory.ts",
    "src/server/UnifiedApexLanguageServer.ts",
    "src/server/ConnectionFactoryInterface.node.ts",
    "src/communication/NodeMessageBridge.ts",
    "src/communication/NodeMessageBridgeFactory.ts",
    "src/storage/StorageInterface.ts",
    "src/storage/NodeStorageFactory.ts",
    "src/storage/WorkerStorageFactory.ts",
    "src/types/node.ts",
    "src/utils/EnvironmentDetector.node.ts",
    "src/utils/LoggerAdapter.ts"
  ],
  "exclude": [
    "src/browser.ts",
    "src/worker.ts",
    "src/server/index.ts",
    "src/server/index.worker.ts",
    "src/server/BrowserConnectionFactory.ts",
    "src/server/WorkerConnectionFactory.ts",
    "src/server/ConnectionFactory.browser.ts",
    "src/server/ConnectionFactory.ts",
    "src/communication/BrowserMessageBridge.ts",
    "src/communication/WorkerMessageBridge.ts",
    "src/communication/BrowserMessageBridgeFactory.ts",
    "src/communication/WorkerMessageBridgeFactory.ts",
    "src/communication/MessageBridgeFactory.browser.ts",
    "src/communication/MessageBridgeFactory.worker.ts",
    "src/communication/MessageBridgeFactory.ts",
    "src/communication/browser-*.ts",
    "src/communication/worker-*.ts",
    "src/polyfills/**/*",
    "src/storage/BrowserStorageFactory.ts",
    "src/storage/BrowserIndexedDBApexStorage.ts",
    "node_modules",
    "out",
    "dist",
    "tsup.config.ts"
  ],
  "references": [
    { "path": "../apex-lsp-shared" },
    { "path": "../apex-parser-ast" },
    { "path": "../lsp-compliant-services" }
  ]
}