{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out/node",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "ESNext.AsyncIterable", "ESNext.Disposable"],
    "tsBuildInfoFile": "./out/node/.tsbuildinfo",
    "skipLibCheck": true,
    "incremental": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["../../node_modules/@types", "./src/types"],
    "types": [
      "node",
      "events",
      "webworker",
      "node/net",
      "node/stream",
      "node/buffer",
      "node/process"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.node.ts",
    "src/**/*.browser.ts",
    "src/**/*.worker.ts",
    "src/storage/StorageFactory.worker.ts",
    "src/utils/EnvironmentDetector.worker.ts",
    "src/server/ApexLanguageServer.ts",
    "src/communication/Client.ts",
    "src/communication/factory.browser.ts",
    "src/utils/EnvironmentDetector.browser.ts",
    "src/polyfills/**/*.ts"
  ],
  "exclude": [
    "src/browser.ts",
    "src/index.ts",

    "src/client/**/*",
    "src/launcher/**/*",
    "node_modules",
    "out",
    "dist",
    "tsup.config.ts"
  ],
  "references": [
    { "path": "../apex-lsp-shared" },
    { "path": "../apex-parser-ast" },
    { "path": "../lsp-compliant-services" }
  ]
}
