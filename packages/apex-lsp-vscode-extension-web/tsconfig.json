{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out", "dist", "**/*.test.ts", "test/**/*"],
  "copyFiles": [
    {
      "from": "../../node_modules/@salesforce/apex-tmlanguage/grammars",
      "to": "out/grammars"
    },
    {
      "from": "snippets",
      "to": "out/snippets"
    }
  ]
}
