{
  "name": "@salesforce/web-apex-ls-ts",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Web-based Apex Language Server implementation in TypeScript",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/web-apex-ls-ts"
  },
  "scripts": {
    "build": "wireit",
    "compile": "wireit",
    "dev": "wireit",
    "test": "wireit",
    "test:coverage": "wireit",
    "clean": "rimraf dist .wireit",
    "clean:all": "npm run clean && rimraf node_modules",
    "clean:coverage": "rimraf coverage"
  },
  "wireit": {
    "build": {
      "command": "tsc --build",
      "dependencies": [
        "../apex-parser-ast:build",
        "../lsp-compliant-services:build"
      ],
      "files": [
        "src/**/*.ts",
        "src/resources/**/*",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "compile": {
      "command": "tsc --build",
      "dependencies": [
        "../apex-parser-ast:compile",
        "../lsp-compliant-services:compile"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "dev": {
      "command": "tsc --build --watch",
      "service": true,
      "dependencies": [
        "../apex-parser-ast:dev",
        "../lsp-compliant-services:dev"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test": {
      "command": "jest",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../jest.config.cjs",
        "../../babel.config.cjs"
      ],
      "output": []
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../jest.config.cjs",
        "../../babel.config.cjs"
      ],
      "output": [
        "coverage/**"
      ]
    }
  },
  "dependencies": {
    "@salesforce/apex-lsp-parser-ast": "1.0.0",
    "@salesforce/apex-lsp-compliant-services": "1.0.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5"
  },
  "devDependencies": {
    "typescript": "^5.8.2"
  }
}
