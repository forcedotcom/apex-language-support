{
  "name": "@salesforce/apex-lsp-web",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "wireit",
    "dev": "wireit",
    "clean": "rimraf dist .wireit",
    "clean:all": "npm run clean && rimraf node_modules"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "dependencies": [
        "../apex-parser-ast:build",
        "../custom-services:build",
        "../lsp-compliant-services:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    },
    "dev": {
      "command": "vite build --watch",
      "service": true,
      "dependencies": [
        "../apex-parser-ast:dev",
        "../custom-services:dev",
        "../lsp-compliant-services:dev"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "dependencies": {
    "@salesforce/apex-lsp-parser-ast": "1.0.0",
    "@salesforce/apex-lsp-custom-services": "1.0.0",
    "@salesforce/apex-lsp-compliant-services": "1.0.0",
    "vscode-languageserver": "^8.0.0"
  },
  "devDependencies": {
    "typescript": "^4.0.0",
    "vite": "^5.0.0",
    "@rollup/plugin-typescript": "^11.1.5"
  }
}
