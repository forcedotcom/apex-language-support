{
  "name": "@salesforce/apex-ls-browser",
  "version": "1.0.0",
  "description": "Unified web worker-based Apex Language Server for browser and Node.js environments",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./worker": {
      "import": "./dist/worker.mjs",
      "require": "./dist/worker.js"
    },
    "./worker-esm": {
      "import": "./dist/worker-esm.mjs",
      "require": "./dist/worker-esm.js"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-ls-browser"
  },
  "scripts": {
    "compile": "tsc --build",
    "bundle": "tsup",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageDirectory=./coverage",
    "clean": "rimraf out dist .turbo coverage tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "rebuild": "npm run clean && npm install && npm run compile && npm run bundle"
  },
  "dependencies": {
    "@salesforce/apex-lsp-compliant-services": "1.0.0",
    "@salesforce/apex-lsp-custom-services": "1.0.0",
    "@salesforce/apex-lsp-parser-ast": "1.0.0",
    "@salesforce/apex-lsp-shared": "1.0.0",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "rollup-plugin-node-polyfills": "^0.2.1"
  }
}
