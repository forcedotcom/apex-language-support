{
  "name": "@salesforce/apex-ls-node",
  "version": "1.0.0",
  "description": "Node.js implementation of Apex Language Server",
  "main": "bundle/index.js",
  "module": "bundle/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./bundle/index.mjs",
    "require": "./bundle/index.js"
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-ls-node"
  },
  "scripts": {
    "compile": "tsc --build",
    "bundle": "npm run compile && tsup",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageDirectory=./coverage",
    "clean": "rimraf dist bundle *.tsbuildinfo .turbo coverage",
    "clean:all": "npm run clean && rimraf node_modules",
    "dev": "tsup --watch"
  },
  "dependencies": {
    "@salesforce/apex-lsp-parser-ast": "1.0.0",
    "@salesforce/apex-lsp-custom-services": "1.0.0",
    "@salesforce/apex-lsp-compliant-services": "1.0.0",
    "@salesforce/apex-lsp-logging": "1.0.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "rimraf": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  }
}
