{
  "name": "@salesforce/apex-lsp-vscode-client",
  "version": "0.1.0",
  "description": "VSCode client for the Apex Language Server",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-lsp-vscode-client"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "wireit",
    "dev": "wireit",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist .wireit",
    "clean:all": "npm run clean && rimraf node_modules"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    },
    "dev": {
      "command": "vite build --watch",
      "service": true,
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.6"
  },
  "keywords": [
    "apex",
    "salesforce",
    "language-server",
    "lsp",
    "client",
    "vscode"
  ],
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "publishConfig": {
    "access": "public"
  }
}
