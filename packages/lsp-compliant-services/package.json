{
  "name": "@salesforce/apex-lsp-compliant-services",
  "version": "1.0.0",
  "description": "LSP Compliant Services for Apex Language Server",
  "main": "out/index.js",
  "module": "out/index.js",
  "types": "out/index.d.ts",
  "exports": {
    "import": "./out/index.js",
    "require": "./out/index.js"
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/lsp-compliant-services"
  },
  "scripts": {
    "compile": "wireit",
    "bundle": "wireit",
    "test": "wireit",
    "test:one": "wireit",
    "test:coverage": "wireit",
    "clean": "rimraf out dist .wireit coverage tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "wireit"
  },
  "wireit": {
    "compile": {
      "command": "tsc --build",
      "dependencies": [
        "../apex-parser-ast:precompile"
      ],
      "output": [
        "out/**"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig*.json",
        "../../tsconfig.base.json"
      ]
    },
    "bundle": {
      "command": "tsx esbuild.config.ts",
      "dependencies": [
        "compile",
        "../esbuild-presets:compile",
        "../apex-parser-ast:compile"
      ],
      "output": [
        "dist/**"
      ],
      "files": [
        "src/**/*.ts",
        "esbuild.config.ts"
      ]
    },
    "test": {
      "command": "jest --json --outputFile=.wireit/test-results.json",
      "dependencies": [
        "compile"
      ],
      "output": [
        ".wireit/test-results.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs",
        "../../scripts/jest-teardown.js"
      ]
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage",
      "dependencies": [
        "compile"
      ],
      "output": [
        "coverage/**"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs",
        "../../scripts/jest-teardown.js"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache src test",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../eslint.config.mjs"
      ],
      "output": []
    },
    "test:one": {
      "command": "jest --testPathPattern=HoverProcessingService.integration.test --testNamePattern=\"should provide hover for method declaration testFileUtilities\" --json --outputFile=.wireit/test-results-one.json",
      "dependencies": [
        "compile"
      ],
      "output": [
        ".wireit/test-results-one.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs",
        "../../scripts/jest-teardown.js"
      ]
    }
  },
  "dependencies": {
    "@salesforce/apex-lsp-parser-ast": "workspace:*",
    "@salesforce/apex-lsp-shared": "workspace:*",
    "data-structure-typed": "^2.0.4",
    "effect": "^3.18.4",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@salesforce/esbuild-presets": "workspace:*"
  }
}
