{
  "name": "@salesforce/apex-lsp-compliant-services",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "LSP compliant services for Salesforce Apex Language Server",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/lsp-compliant-services"
  },
  "scripts": {
    "build": "wireit",
    "dev": "wireit",
    "clean": "rimraf dist .wireit",
    "clean:all": "npm run clean && rimraf node_modules"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "dependencies": [
        "../apex-parser-ast:build",
        "../custom-services:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    },
    "dev": {
      "command": "vite build --watch",
      "service": true,
      "dependencies": [
        "../apex-parser-ast:dev",
        "../custom-services:dev"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "dependencies": {
    "@salesforce/apex-lsp-parser-ast": "1.0.0",
    "@salesforce/apex-lsp-custom-services": "1.0.0",
    "vscode-languageserver": "^8.0.0",
    "vscode-languageserver-protocol": "^3.17.5"
  },
  "devDependencies": {
    "typescript": "^4.0.0",
    "vite": "^5.4.17",
    "@rollup/plugin-typescript": "^11.1.5"
  }
}
