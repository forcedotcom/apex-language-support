{
  "name": "@salesforce/apex-lsp-parser-ast",
  "version": "1.0.0",
  "description": "Apex Parser AST for Language Server",
  "main": "out/index.js",
  "module": "out/index.js",
  "types": "out/index.d.ts",
  "exports": {
    ".": {
      "import": "./out/index.js",
      "require": "./out/index.js"
    }
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-parser-ast"
  },
  "files": [
    "out",
    "resources",
    "README.md"
  ],
  "scripts": {
    "precompile": "wireit",
    "bundle": "wireit",
    "compile": "wireit",
    "test": "wireit",
    "test:one": "wireit",
    "test:coverage": "wireit",
    "clean": "rimraf out resourcesdist .wireit coverage src/generated tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "wireit"
  },
  "wireit": {
    "precompile": {
      "command": "node scripts/generate-keywords.mjs && node scripts/generate-zip.mjs",
      "output": [
        "src/generated/**",
        "out/resources/**",
        "resources/**"
      ],
      "files": [
        "scripts/generate-keywords.mjs",
        "scripts/generate-zip.mjs",
        "src/**/*.cls"
      ]
    },
    "compile": {
      "command": "tsc --build",
      "dependencies": [
        "precompile"
      ],
      "output": [
        "out/**"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig*.json",
        "../../tsconfig.base.json"
      ]
    },
    "bundle": {
      "command": "tsx esbuild.config.ts",
      "dependencies": [
        "precompile",
        "compile"
      ],
      "output": [
        "dist/**"
      ],
      "files": [
        "src/**/*.ts",
        "esbuild.config.ts",
        "out/resources/**",
        "out/index.d.ts"
      ]
    },
    "test": {
      "command": "jest --json --outputFile=.wireit/test-results.json",
      "dependencies": [
        "compile"
      ],
      "output": [
        ".wireit/test-results.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs",
        "../../scripts/jest-teardown.js"
      ]
    },
    "test:coverage": {
      "command": "jest --coverage --coverageDirectory=./coverage",
      "dependencies": [
        "compile"
      ],
      "output": [
        "coverage/**"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs",
        "../../scripts/jest-teardown.js"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache src test",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../eslint.config.mjs"
      ],
      "output": []
    },
    "test:one": {
      "command": "jest --testPathPattern=resourceLoader --json --outputFile=.wireit/test-results-one.json",
      "dependencies": [
        "compile"
      ],
      "output": [
        ".wireit/test-results-one.json"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/jest.config.cjs",
        "../../scripts/jest-teardown.js"
      ]
    }
  },
  "dependencies": {
    "@apexdevtools/apex-parser": "4.4.1",
    "@salesforce/apex-lsp-shared": "*",
    "antlr4ts": "0.5.0-alpha.4",
    "data-structure-typed": "^2.0.4",
    "effect": "^3.18.4",
    "fflate": "^0.8.1"
  },
  "devDependencies": {
    "@salesforce/esbuild-presets": "*",
    "esbuild-plugin-copy": "^2.1.1"
  }
}
