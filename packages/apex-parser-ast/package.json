{
  "name": "@salesforce/apex-lsp-parser-ast",
  "version": "1.0.0",
  "description": "Apex Parser AST for Language Server",
  "main": "out/index.js",
  "module": "out/index.js",
  "types": "out/index.d.ts",
  "exports": {
    ".": {
      "import": "./out/index.js",
      "require": "./out/index.js"
    }
  },
  "sideEffects": false,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-parser-ast"
  },
  "files": [
    "out",
    "resources",
    "README.md"
  ],
  "scripts": {
    "precompile": "node scripts/generate-keywords.mjs && node scripts/generate-zip.mjs && npx tsx scripts/pre-process-stubs.ts",
    "bundle": "tsx esbuild.config.ts",
    "compile": "tsc --build",
    "test": "jest",
    "test:one": "jest --testPathPattern=resourceLoader",
    "test:coverage": "jest --coverage --coverageDirectory=./coverage",
    "clean": "rimraf out dist .turbo coverage src/generated tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix"
  },
  "dependencies": {
    "@apexdevtools/apex-parser": "4.4.1",
    "@salesforce/apex-lsp-shared": "^1.0.0",
    "antlr4ts": "0.5.0-alpha.4",
    "data-structure-typed": "^2.0.4",
    "effect": "^3.18.4",
    "fflate": "^0.8.1"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^30.2.0",
    "@salesforce/esbuild-presets": "^0.1.0"
  }
}
