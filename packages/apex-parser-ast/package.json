{
  "name": "@salesforce/apex-lsp-parser-ast",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Apex parser and abstract syntax tree implementation for Salesforce Apex Language Server",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-parser-ast"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "wireit",
    "compile": "wireit",
    "dev": "wireit",
    "test": "wireit",
    "test:coverage": "wireit",
    "clean": "rimraf dist .wireit",
    "clean:all": "npm run clean && rimraf node_modules",
    "clean:coverage": "rimraf coverage"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "src/resources/**/*",
        "tsconfig.json",
        "vite.config.cjs"
      ],
      "output": [
        "dist/**"
      ]
    },
    "compile": {
      "command": "tsc --project tsconfig.json",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "dev": {
      "command": "vite build --watch",
      "service": true,
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "src/resources/**/*",
        "tsconfig.json",
        "vite.config.cjs"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test": {
      "command": "jest --config=jest.config.cjs",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "jest.config.cjs",
        "babel.config.cjs"
      ],
      "output": []
    },
    "test:coverage": {
      "command": "jest --config=jest.config.cjs --coverage --coverageDirectory=./coverage",
      "service": false,
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "jest.config.cjs",
        "babel.config.cjs"
      ],
      "output": [
        "coverage/**"
      ]
    }
  },
  "dependencies": {
    "@apexdevtools/apex-parser": "4.4.0",
    "antlr4ts": "0.5.0-alpha.4"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "vite": "^6.2.6",
    "@rollup/plugin-typescript": "^11.1.5"
  }
}
