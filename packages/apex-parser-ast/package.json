{
  "name": "@salesforce/apex-lsp-parser-ast",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Apex parser and abstract syntax tree implementation for Salesforce Apex Language Server",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git",
    "directory": "packages/apex-parser-ast"
  },
  "scripts": {
    "build": "wireit",
    "dev": "wireit",
    "clean": "rimraf dist .wireit",
    "clean:all": "npm run clean && rimraf node_modules"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    },
    "dev": {
      "command": "vite build --watch",
      "service": true,
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "dependencies": {
    "@apexdevtools/apex-parser": "4.4.0",
    "antlr4ts": "0.5.0-alpha.4"
  },
  "devDependencies": {
    "typescript": "^4.0.0",
    "vite": "^5.0.0",
    "@rollup/plugin-typescript": "^11.1.5"
  }
}
