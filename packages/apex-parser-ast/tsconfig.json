{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@salesforce/apex-lsp-logging": ["../apex-lsp-logging/src"],
      "@salesforce/apex-lsp-logging/*": ["../apex-lsp-logging/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["node_modules", "dist", "bundle", "**/*.test.ts", "**/*.spec.ts"],
  "references": [{ "path": "../apex-lsp-logging" }]
}
