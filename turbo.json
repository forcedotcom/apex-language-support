{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "precompile": {
      "dependsOn": ["^precompile"],
      "outputs": ["src/generated/**", "out/**"]
    },
    "compile": {
      "dependsOn": ["precompile", "^precompile", "^compile"],
      "outputs": ["out/**", "*.tsbuildinfo"],
      "inputs": ["src/**/*.ts", "src/generated/**"]
    },
    "postcompile": {
      "dependsOn": ["compile", "^postcompile"],
      "outputs": ["out/**"]
    },
    "bundle": {
      "dependsOn": [
        "compile",
        "^compile",
        "^bundle",
        "@salesforce/esbuild-presets#compile"
      ],
      "outputs": ["dist/**", "out/**"]
    },
    "package": {
      "dependsOn": ["bundle", "^package"]
    },
    "test": {
      "dependsOn": ["compile"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "test/**/*.ts", "jest.config.cjs"]
    },
    "test:coverage": {
      "dependsOn": ["compile"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "test/**/*.ts", "jest.config.cjs"]
    },
    "test:perf": {
      "dependsOn": ["compile"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "test/**/*.perf.ts", "jest.config.cjs"]
    },
    "test:quality": {
      "dependsOn": ["compile", "^bundle"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "test/**/*.ts", "jest.config.cjs"]
    },
    "server": {
      "dependsOn": ["compile"],
      "cache": false
    },
    "test:debug": {
      "dependsOn": ["compile"],
      "cache": false
    },
    "test:visual": {
      "dependsOn": ["compile"],
      "cache": false
    },
    "test:web": {
      "dependsOn": ["bundle"],
      "cache": false
    },
    "lint": {
      "dependsOn": [],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "lint:fix": {
      "dependsOn": [],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "clean": {
      "cache": false
    },
    "clean:coverage": {
      "cache": false
    },
    "clean:all": {
      "cache": false
    },
    "apex-language-server-extension#precompile": {
      "dependsOn": [
        "^precompile",
        "@salesforce/apex-lsp-parser-ast#precompile"
      ],
      "outputs": ["grammars/**"]
    },
    "apex-language-server-extension#bundle": {
      "dependsOn": [
        "postcompile",
        "@salesforce/apex-ls#compile",
        "@salesforce/apex-ls#bundle",
        "@salesforce/apex-lsp-compliant-services#compile",
        "@salesforce/esbuild-presets#compile"
      ],
      "outputs": ["extension/**", "dist/**", "server-bundle/**"]
    },
    "apex-language-server-extension#copy-worker-files": {
      "dependsOn": ["bundle", "@salesforce/apex-ls#bundle"],
      "outputs": ["dist/**"]
    },
    "apex-language-server-extension#compile": {
      "dependsOn": [
        "precompile",
        "^precompile",
        "^compile",
        "@salesforce/apex-ls#compile",
        "@salesforce/apex-lsp-parser-ast#precompile"
      ],
      "outputs": ["out/**", "*.tsbuildinfo"]
    },
    "apex-language-server-extension#postcompile": {
      "dependsOn": ["compile", "@salesforce/apex-lsp-parser-ast#compile"],
      "outputs": ["out/**"]
    },
    "apex-language-server-extension#package": {
      "dependsOn": ["copy-worker-files", "^package"],
      "outputs": ["*.vsix"]
    },
    "@salesforce/apex-ls#rebuild": {
      "dependsOn": ["clean", "precompile", "^precompile", "compile", "bundle"],
      "cache": false
    },
    "@salesforce/apex-ls#bundle": {
      "dependsOn": [
        "compile",
        "^compile",
        "@salesforce/esbuild-presets#compile",
        "@salesforce/apex-lsp-compliant-services#compile",
        "@salesforce/apex-lsp-parser-ast#compile"
      ],
      "outputs": ["dist/**"]
    },
    "@salesforce/esbuild-presets#compile": {
      "dependsOn": [],
      "outputs": ["dist/**", "tsconfig.tsbuildinfo"]
    },
    "@salesforce/apex-lsp-compliant-services#bundle": {
      "dependsOn": ["compile", "@salesforce/esbuild-presets#compile"],
      "outputs": ["dist/**"]
    }
  }
}
