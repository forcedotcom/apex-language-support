{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "precompile": {
      "outputs": ["src/generated/**"]
    },
    "compile": {
      "dependsOn": ["precompile", "^precompile", "^compile"],
      "outputs": ["dist/**", "*.tsbuildinfo"],
      "inputs": ["src/**/*.ts", "src/generated/**"]
    },
    "apex-language-server-extension#compile": {
      "dependsOn": [
        "@salesforce/apex-lsp-parser-ast#precompile",
        "@salesforce/apex-lsp-parser-ast#compile"
      ]
    },
    "test": {
      "dependsOn": ["compile"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "test/**/*.ts", "jest.config.cjs"]
    },
    "test:coverage": {
      "dependsOn": ["compile"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "test/**/*.ts", "jest.config.cjs"]
    },
    "lint": {
      "dependsOn": ["compile"],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "lint:fix": {
      "dependsOn": ["compile"],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "clean": {
      "cache": false
    },
    "clean:coverage": {
      "cache": false
    },
    "clean:all": {
      "cache": false
    },
    "bundle": {
      "dependsOn": ["^bundle", "compile"],
      "outputs": ["dist/**"]
    },
    "package": {
      "dependsOn": ["bundle"],
      "outputs": ["extension/**"]
    }
  }
}
