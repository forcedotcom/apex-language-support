{
  "name": "@salesforce/apex-language-server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext .ts,.mjs 'packages/*/src/**/*.ts'",
    "lint:fix": "eslint --ext .ts,.mjs 'packages/*/src/**/*.ts' --fix",
    "build": "wireit",
    "build:debug": "cross-env VITE_BUILD_DEBUG=true npm run build",
    "dev": "wireit",
    "prepare": "husky install",
    "commit": "git-cz",
    "clean": "rimraf packages/**/dist packages/**/.wireit",
    "clean:all": "npm run clean && rimraf node_modules",
    "clean:packages": "npm run clean --workspaces"
  },
  "keywords": ["salesforce", "apex", "language server", "lsp"],
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "description": "Language Server Protocol implementation for Salesforce Apex",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git"
  },
  "bugs": {
    "url": "https://github.com/forcedotcom/apex-language-support/issues"
  },
  "homepage": "https://github.com/forcedotcom/apex-language-support#readme",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "@tony.ganchev/eslint-plugin-header": "^3.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "wireit": "^0.14.4"
  },
  "dependencies": {
    "@apexdevtools/apex-parser": "4.4.0",
    "antlr4ts": "0.5.0-alpha.4"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "wireit": {
    "build": {
      "dependencies": [
        "./packages/apex-parser-ast:build",
        "./packages/custom-services:build",
        "./packages/lsp-compliant-services:build",
        "./packages/extension-apex-ls-ts:build",
        "./packages/web-apex-ls-ts:build",
        "./packages/apex-lsp-browser-client:build",
        "./packages/apex-lsp-vscode-client:build"
      ]
    },
    "dev": {
      "dependencies": [
        "./packages/apex-parser-ast:dev",
        "./packages/custom-services:dev",
        "./packages/lsp-compliant-services:dev",
        "./packages/extension-apex-ls-ts:dev",
        "./packages/web-apex-ls-ts:dev",
        "./packages/apex-lsp-browser-client:dev",
        "./packages/apex-lsp-vscode-client:dev"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
