{
  "name": "@salesforce/apex-language-server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:packages": "wireit",
    "test:coverage:packages": "wireit",
    "test:coverage:report": "wireit",
    "test:integration": "wireit",
    "lint": "eslint --ext .ts,.mjs 'packages/*/src/**/*.ts'",
    "lint:fix": "eslint --ext .ts,.mjs 'packages/*/src/**/*.ts' --fix",
    "build": "wireit",
    "compile": "wireit",
    "build:debug": "cross-env DEBUG=true npm run build",
    "build:no-minify": "cross-env NO_MINIFY=true npm run build",
    "dev": "wireit",
    "prepare": "husky",
    "commit": "git-cz",
    "clean": "rimraf packages/**/dist packages/**/.wireit",
    "clean:all": "npm run clean && rimraf node_modules",
    "clean:packages": "npm run clean --workspaces",
    "clean:coverage": "rimraf coverage packages/*/coverage",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "salesforce",
    "apex",
    "language server",
    "lsp"
  ],
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "description": "Language Server Protocol implementation for Salesforce Apex",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/apex-language-support.git"
  },
  "bugs": {
    "url": "https://github.com/forcedotcom/apex-language-support/issues"
  },
  "homepage": "https://github.com/forcedotcom/apex-language-support#readme",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^10.0.5",
    "@semantic-release/release-notes-generator": "^11.0.7",
    "@tony.ganchev/eslint-plugin-header": "^3.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.31.1",
    "axios": "^1.6.2",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.0.11",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2",
    "wireit": "^0.14.4"
  },
  "dependencies": {
    "@apexdevtools/apex-parser": "4.4.0",
    "antlr4ts": "0.5.0-alpha.4"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "wireit": {
    "build": {
      "dependencies": [
        "./packages/apex-ls-node:build",
        "./packages/custom-services:build",
        "./packages/lsp-compliant-services:build",
        "./packages/apex-ls-browser:build",
        "./packages/apex-lsp-browser-client:build",
        "./packages/apex-lsp-testbed:build"
      ]
    },
    "compile": {
      "dependencies": [
        "./packages/apex-ls-node:compile",
        "./packages/custom-services:compile",
        "./packages/lsp-compliant-services:compile",
        "./packages/apex-ls-browser:compile",
        "./packages/apex-lsp-browser-client:compile",
        "./packages/apex-lsp-testbed:compile"
      ]
    },
    "dev": {
      "dependencies": [
        "./packages/apex-ls-node:dev",
        "./packages/custom-services:dev",
        "./packages/lsp-compliant-services:dev",
        "./packages/apex-ls-browser:dev",
        "./packages/apex-lsp-browser-client:dev",
        "./packages/apex-lsp-testbed:dev"
      ]
    },
    "test:packages": {
      "dependencies": [
        "./packages/apex-ls-node:test",
        "./packages/custom-services:test",
        "./packages/lsp-compliant-services:test",
        "./packages/apex-ls-browser:test",
        "./packages/apex-lsp-browser-client:test",
        "./packages/apex-lsp-testbed:test"
      ]
    },
    "test:coverage:packages": {
      "dependencies": [
        "./packages/apex-ls-node:test:coverage",
        "./packages/custom-services:test:coverage",
        "./packages/lsp-compliant-services:test:coverage",
        "./packages/apex-ls-browser:test:coverage",
        "./packages/apex-lsp-browser-client:test:coverage",
        "./packages/apex-lsp-testbed:test:coverage"
      ]
    },
    "test:coverage:report": {
      "command": "node scripts/merge-coverage.js",
      "dependencies": [
        "test:coverage:packages"
      ],
      "files": [
        "scripts/merge-coverage.js",
        "packages/*/coverage/coverage-final.json"
      ],
      "output": [
        "coverage/**"
      ]
    },
    "test:integration": {
      "dependencies": [
        "./packages/apex-lsp-testbed:test:integration"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
