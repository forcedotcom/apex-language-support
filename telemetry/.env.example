# Apex Language Server Telemetry Configuration
#
# Copy this file to .env and modify as needed.
# These environment variables configure telemetry behavior.

# =============================================================================
# Azure Application Insights (Production Telemetry)
# =============================================================================
# Connection string for Azure Application Insights
# Format: InstrumentationKey=xxx;IngestionEndpoint=https://xxx.in.applicationinsights.azure.com/
# AZURE_MONITOR_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-endpoint.in.applicationinsights.azure.com/

# Also set this in the VS Code extension environment for production telemetry
# APEX_LSP_APP_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-endpoint.in.applicationinsights.azure.com/

# =============================================================================
# Local Tracing Options (Development)
# =============================================================================
# Enable export to local OTEL Collector (http://localhost:4318)
# Set to 'true' to enable local tracing during development
APEX_LSP_LOCAL_TRACING=true

# Enable console span logging (outputs to server console)
# Set to 'true' for debugging, 'false' for cleaner logs
APEX_LSP_CONSOLE_TRACING=false

# =============================================================================
# VS Code Settings Equivalent
# =============================================================================
# The above environment variables can also be set via VS Code settings:
#
# "apex.telemetry.enabled": true,
# "apex.telemetry.localTracingEnabled": true,
# "apex.telemetry.consoleTracingEnabled": false
