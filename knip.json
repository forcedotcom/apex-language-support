{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [".github/scripts/**/*.{js,ts,mjs}", "scripts/test-web-ext.js"]
    },
    "packages/apex-ls": {
      "entry": [
        "src/server.*.ts",
        "src/index.browser.ts",
        "src/server.ts",
        "src/server/webWorkerServer.ts",
        "src/communication/BrowserClient.ts",
        "src/communication/PlatformBridges.ts",
        "src/launcher/WorkerLauncher.ts",
        "src/server/NodeConnectionFactory.ts",
        "src/server/UnifiedConnectionFactory.ts",
        "src/storage/IndexedDBStorage.ts",
        "src/utils/WorkerLogNotificationHandler.ts"
      ],
      "ignoreDependencies": [
        "assert",
        "buffer",
        "crypto-browserify",
        "events",
        "memfs",
        "memfs-browser",
        "node-dir",
        "os-browserify",
        "path-browserify",
        "process",
        "stream-browserify",
        "util"
      ]
    },
    "packages/apex-lsp-testbed": {
      "entry": [
        "src/cli.ts",
        "examples/**/*.ts",
        "scripts/**/*.{js,mjs}",
        "mock-server.js",
        "test-document-symbols.js",
        "src/servers/**/*.ts",
        "src/test-utils/**/*.ts",
        "test/**/*.ts"
      ]
    },
    "packages/apex-lsp-vscode-extension": {
      "entry": [
        "src/index.ts",
        "src/utils.js",
        "src/logging/VSCodeLogNotificationHandler.ts",
        "src/webviews/graphScript.ts",
        "src/webviews/graphRenderer.ts",
        "src/webviews/performanceSettingsScript.ts",
        "src/webviews/queueStateScript.ts",
        "src/apexlib/index.ts",
        "test/**/*.ts"
      ],
      "ignoreDependencies": [
        "@salesforce/apex-tmlanguage",
        "buffer",
        "events",
        "process",
        "util"
      ]
    },
    "packages/apex-parser-ast": {
      "entry": [
        "scripts/**/*.{js,mjs}",
        "src/semantics/sourceFile.ts",
        "src/semantics/validation/index.ts",
        "src/semantics/versions.ts",
        "src/symbols/BackgroundProcessingManager.ts",
        "src/symbols/resolution/index.ts",
        "src/cache/**/*.ts",
        "src/utils/resourceLoader.ts",
        "src/generated/**/*.ts",
        "test/**/*.ts",
        "test/helpers/**/*.ts"
      ],
      "ignoreDependencies": ["@protobuf-ts/plugin"]
    },
    "packages/lsp-compliant-services": {
      "entry": [
        "src/apexlib/manager.ts",
        "src/handlers/WorkspaceSymbolHandler.ts"
      ]
    },
    "e2e-tests": {
      "entry": ["tests/**/*.spec.ts", "utils/**/*.ts"]
    }
  },
  "ignoreBinaries": ["ovsx", "gh"],
  "ignore": [
    "**/*.d.ts",
    "coverage/**",
    "dist/**",
    "out/**",
    "node_modules/**",
    ".wireit/**",
    "**/.wireit/**",
    ".wireit",
    "**/*.tsbuildinfo",
    "**/*.config.{js,cjs,mjs}",
    "**/jest.config*.{js,cjs,mjs}",
    ".releaserc.json",
    "tsconfig*.json",
    "packages/apex-lsp-testbed/src/utils/clientFactory.ts",
    "packages/apex-lsp-testbed/scripts/jest-setup-windows.js",
    "packages/apex-parser-ast/src/generated/zipResourceLoader.ts"
  ],
  "ignoreExportsUsedInFile": false,
  "rules": {
    "files": "error",
    "dependencies": "error",
    "devDependencies": "error",
    "unlisted": "error",
    "binaries": "error",
    "unresolved": "error",
    "exports": "off",
    "nsExports": "off",
    "types": "off",
    "nsTypes": "off",
    "duplicates": "error",
    "enumMembers": "off"
  },
  "ignoreWorkspaces": [],
  "includeEntryExports": false
}
