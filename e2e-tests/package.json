{
  "name": "e2e-tests",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end tests for Apex Language Server Extension",
  "scripts": {
    "test:e2e": "wireit",
    "test:debug": "wireit",
    "test:visual": "wireit",
    "server": "node test-server.js",
    "clean": "echo 'No artifacts to clean in e2e-tests'",
    "clean:all": "npm run clean"
  },
  "wireit": {
    "test:e2e": {
      "command": "playwright test",
      "output": ["test-results/**", "playwright-report/**"],
      "files": ["tests/**/*.ts", "utils/**/*.ts", "playwright.config.ts"]
    },
    "test:debug": {
      "command": "DEBUG_MODE=1 playwright test --debug",
      "output": ["test-results/**"],
      "files": ["tests/**/*.ts", "utils/**/*.ts", "playwright.config.ts"],
      "cache": false
    },
    "test:visual": {
      "command": "DEBUG_MODE=1 playwright test --ui",
      "output": ["test-results/**"],
      "files": ["tests/**/*.ts", "utils/**/*.ts", "playwright.config.ts"],
      "cache": false
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.11.30",
    "typescript": "^5.8.2"
  },
  "dependencies": {}
}
